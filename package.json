{
  "name": "@polyhobbyist/babylon_ros",
  "repository": {
    "type": "git",
    "url": "https://github.com/polyhobbyist/babylon_ros.git"
  },
  "description": "Babylon.JS abstractions for ROS 2",
  "version": "0.0.9",
  "main": "dist/ros.js",
  "types": "types/src/ros.d.ts",
  "exports": {
    ".": [
      "./dist/ros.js"
    ]
  },
  "files": [
    "./dist"
  ],
  "scripts": {
    "test": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "build": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "pretest": "npm run build",
    "prepublishOnly": "webpack --mode=production"
  },
  "keywords": [
    "babylonjs",
    "ros",
    "ros2"
  ],
  "browser": {
    "fs": false,
    "os": false,
    "path": false
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "author": "lou@polyhobbyist.com",
  "license": "MIT",
  "dependencies": {
    "@polyhobbyist/babylon-collada-loader": "^0.0.6",
    "@types/xml2js": "^0.4.14",
    "@types/xmldom": "^0.1.34",
    "babylonjs": "7.16.x",
    "babylonjs-gui": "7.16.x",
    "babylonjs-loaders": "7.16.x",
    "babylonjs-materials": "7.16.x",
    "babylonjs-viewer": "7.16.x",
    "buffer": "^6.0.3",
    "jest-environment-jsdom": "^29.7.0",
    "stream-browserify": "^3.0.0",
    "string_decoder": "^1.3.0",
    "timers-browserify": "^2.0.12",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.12",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.2.3",
    "ts-loader": "^9.5.1",
    "tslib": "^2.6.3",
    "typescript": "^5.8.2",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  }
}
